# Environment variables for backend
# Copy this to .env and fill in your values

# Security
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=weapon_detection

# Redis
REDIS_URL=redis://localhost:6379

# Telegram Alert Service (required for alerts)
# Get bot token from @BotFather: https://t.me/BotFather
# Get chat ID from @userinfobot: https://t.me/userinfobot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789

# CORS (add your frontend URLs)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
